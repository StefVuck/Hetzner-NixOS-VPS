# secrets.nix.example
#
# Copy this file to secrets.nix and fill in your actual values
# NEVER commit secrets.nix to git!
#
# Usage:
#   cp secrets.nix.example secrets.nix
#   nano secrets.nix  # Edit with your values
#   chmod 600 secrets.nix

{
  # ACME / Let's Encrypt Configuration
  # This email receives certificate expiry notifications
  acme = {
    email = "your-email@example.com";
  };
  
  # Domain and Network Configuration
  domains = {
    # Your main domain name
    main = "yourdomain.com";
    
    # Your VPS public IP address
    ip = "123.45.67.89";
  };
  
  # Git Repositories
  # URLs to your project repositories
  github = {
    # Example project repository
    projectRepo = "https://github.com/yourusername/repository";
  };
  
  # Monitoring Configuration
  grafana = {
    # Grafana admin password
    # Generate a strong password: openssl rand -base64 32
    adminPassword = "CHANGE_ME_TO_SECURE_PASSWORD";
  };

  # Comin - GitOps Configuration
  comin = {
    # Your NixOS configuration repository URL
    repoUrl = "https://github.com/yourusername/nixos-config";

    # Optional: For private repositories
    # Create a GitHub personal access token with repo read access:
    # 1. Go to GitHub Settings → Developer settings → Personal access tokens
    # 2. Generate new token (fine-grained or classic)
    # 3. Give it "Contents: Read-only" permission
    # 4. Save the token to a file: echo "ghp_YOUR_TOKEN" > /root/.github-token
    # 5. Secure it: chmod 600 /root/.github-token
    # 6. Uncomment the auth line in modules/comin.nix
    tokenPath = "/root/.github-token";
  };

  # SSH Access
  # Add all SSH public keys that should have root access
  sshKeys = [
    "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAI... user@machine"
    # Add more keys as needed:
    # "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAI... laptop"
    # "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAI... desktop"
  ];
  
  # Optional: Application-specific secrets
  # Add any environment variables or secrets your apps need
  apps = {
    exampleApp = {
      # Add any secrets for your application if needed
    };
  };
  
  # Optional: Database credentials (if you add PostgreSQL/MySQL later)
  # databases = {
  #   postgres = {
  #     password = "secure-db-password";
  #   };
  # };
  
  # Optional: OAuth/API keys for external services
  # externalServices = {
  #   github = {
  #     clientId = "...";
  #     clientSecret = "...";
  #   };
  # };
}
